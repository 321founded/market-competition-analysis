{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Competitor Profile Schema",
  "description": "Standard schema for competitor data in market analysis",
  "type": "object",
  "required": ["name", "description", "services", "website", "sourceURL", "category"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Official company name",
      "minLength": 1,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "description": "Brief description of company and value proposition",
      "minLength": 10,
      "maxLength": 500
    },
    "services": {
      "type": "array",
      "description": "List of key services or products offered",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "maxItems": 20
    },
    "website": {
      "type": "string",
      "format": "uri",
      "description": "Official company website URL"
    },
    "sourceURL": {
      "type": "string",
      "format": "uri",
      "description": "URL where this competitor was discovered"
    },
    "logoURL": {
      "type": "string",
      "format": "uri",
      "description": "URL to company logo image"
    },
    "category": {
      "type": "string",
      "description": "Primary competitor category assignment",
      "minLength": 1
    },
    "metadata": {
      "type": "object",
      "description": "Analysis metadata and quality indicators",
      "properties": {
        "lastUpdated": {
          "type": "string",
          "format": "date",
          "description": "Date when information was last updated (YYYY-MM-DD)"
        },
        "confidence": {
          "type": "string",
          "enum": ["high", "medium", "low"],
          "description": "Confidence level in the data accuracy"
        },
        "primarySources": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of primary sources used"
        },
        "dataCompleteness": {
          "type": "string",
          "pattern": "^\\d+%$",
          "description": "Percentage of schema fields populated (e.g., '85%')"
        }
      },
      "required": ["lastUpdated", "confidence"]
    },
    "business": {
      "type": "object",
      "description": "Business information and context",
      "properties": {
        "founded": {
          "type": "string",
          "pattern": "^\\d{4}$",
          "description": "Year founded (YYYY format)"
        },
        "headquarters": {
          "type": "string",
          "description": "Primary headquarters location (City, Country)",
          "maxLength": 100
        },
        "employees": {
          "type": "string",
          "description": "Employee count or range (e.g., '100-500', '1000+')",
          "maxLength": 50
        },
        "funding": {
          "type": "string",
          "description": "Funding status and amount (e.g., 'Series B, $25M')",
          "maxLength": 100
        },
        "businessModel": {
          "type": "string",
          "description": "Primary business model",
          "maxLength": 100
        },
        "targetMarket": {
          "type": "string",
          "description": "Primary target market or customer segment",
          "maxLength": 200
        }
      }
    },
    "capabilities": {
      "type": "object",
      "description": "Product and service capabilities",
      "properties": {
        "keyFeatures": {
          "type": "array",
          "description": "Key product features or capabilities",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "maxItems": 20
        },
        "integrations": {
          "type": "array",
          "description": "Key integrations or partnerships",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "maxItems": 20
        },
        "compliance": {
          "type": "array",
          "description": "Compliance certifications or standards",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "maxItems": 20
        },
        "languages": {
          "type": "array",
          "description": "Supported languages for product/service",
          "items": {
            "type": "string",
            "minLength": 2
          },
          "maxItems": 50
        }
      }
    },
    "market": {
      "type": "object",
      "description": "Market position and relationships",
      "properties": {
        "targetCustomers": {
          "type": "array",
          "description": "Target customer segments or sizes",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "maxItems": 10
        },
        "customerExamples": {
          "type": "array",
          "description": "Example customers or case studies",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "maxItems": 20
        },
        "partnerships": {
          "type": "array",
          "description": "Key business partnerships",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "maxItems": 20
        },
        "geographicFocus": {
          "type": "array",
          "description": "Primary geographic markets served",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "maxItems": 50
        }
      }
    },
    "evidence": {
      "type": "object",
      "description": "Supporting evidence and source documentation",
      "properties": {
        "reviews": {
          "type": "object",
          "description": "Customer review platform data",
          "properties": {
            "g2": {
              "type": "object",
              "properties": {
                "score": {
                  "type": "number",
                  "minimum": 1,
                  "maximum": 5
                },
                "reviewCount": {
                  "type": "integer",
                  "minimum": 0
                },
                "url": {
                  "type": "string",
                  "format": "uri"
                }
              }
            },
            "capterra": {
              "type": "object",
              "properties": {
                "score": {
                  "type": "number",
                  "minimum": 1,
                  "maximum": 5
                },
                "reviewCount": {
                  "type": "integer",
                  "minimum": 0
                },
                "url": {
                  "type": "string",
                  "format": "uri"
                }
              }
            },
            "trustRadius": {
              "type": "object",
              "properties": {
                "score": {
                  "type": "number",
                  "minimum": 1,
                  "maximum": 10
                },
                "reviewCount": {
                  "type": "integer",
                  "minimum": 0
                },
                "url": {
                  "type": "string",
                  "format": "uri"
                }
              }
            }
          }
        },
        "caseStudies": {
          "type": "array",
          "description": "URLs to customer case studies",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "maxItems": 20
        },
        "awards": {
          "type": "array",
          "description": "Industry awards or recognition",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "maxItems": 20
        },
        "mediaFeaturing": {
          "type": "array",
          "description": "Media coverage, analyst reports, or industry mentions",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "maxItems": 20
        }
      }
    },
    "analysis": {
      "type": "object",
      "description": "Competitive analysis and scoring",
      "properties": {
        "strengths": {
          "type": "array",
          "description": "Key competitive strengths",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "maxItems": 10
        },
        "considerations": {
          "type": "array",
          "description": "Potential limitations or considerations",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "maxItems": 10
        },
        "scores": {
          "type": "object",
          "description": "Dimensional analysis scores",
          "patternProperties": {
            "^[a-zA-Z][a-zA-Z0-9_]*$": {
              "type": "object",
              "properties": {
                "score": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 5,
                  "description": "Score on 1-5 scale"
                },
                "confidence": {
                  "type": "string",
                  "enum": ["high", "medium", "low"],
                  "description": "Confidence in the score assessment"
                },
                "evidence": {
                  "type": "array",
                  "description": "Evidence supporting the score",
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "sources": {
                  "type": "array",
                  "description": "Source URLs supporting the score",
                  "items": {
                    "type": "string",
                    "format": "uri"
                  }
                }
              },
              "required": ["score", "confidence"]
            }
          }
        }
      }
    }
  }
}